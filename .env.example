# Environment Configuration for Agentic Workflow

# ============================================================================
# LLM PROVIDER SELECTION
# ============================================================================
# Options: "ollama" (local GPU) or "openai" (cloud API)
LLM_PROVIDER=openai

# ============================================================================
# OLLAMA CONFIGURATION (Local GPU)
# ============================================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_NAME=mistral:7b-instruct-q4_K_M

# ============================================================================
# OPENAI CONFIGURATION (Cloud API)
# ============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
# Model options: gpt-4o, gpt-4o-mini, gpt-4-turbo
OPENAI_MODEL_NAME=gpt-4.1

# ============================================================================
# GENERAL CONFIGURATION
# ============================================================================
DEVICE=cuda
LOG_LEVEL=INFO
